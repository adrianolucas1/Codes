<!-- =============================
     √ÅUDIOS DO JOGO
============================= -->

<audio id="bgMusic" loop src="https://assets.mixkit.co/music/preview/mixkit-game-show-suspense-waiting-667.mp3"></audio>
<audio id="correctSound" src="https://assets.mixkit.co/sfx/preview/mixkit-correct-answer-tone-2870.mp3"></audio>
<audio id="wrongSound" src="https://assets.mixkit.co/sfx/preview/mixkit-wrong-answer-fail-notification-946.mp3"></audio>
<audio id="winSound" src="https://assets.mixkit.co/sfx/preview/mixkit-winning-chimes-2015.mp3"></audio>
<audio id="applause" src="https://assets.mixkit.co/sfx/preview/mixkit-small-group-cheer-and-applause-518.mp3"></audio>

<script>

/* =============================
   PERGUNTAS (mais simples)
============================= */

const quizData=[
{q:"Em que pa√≠s ficam as pir√¢mides do Egito?",img:"https://images.unsplash.com/photo-1544986581-efac024faf62",opts:["Egito","Brasil","M√©xico","It√°lia"],ans:0},
{q:"Onde fica o Taj Mahal?",img:"https://images.unsplash.com/photo-1564507592333-c60657eea523",opts:["√çndia","China","Jap√£o","Espanha"],ans:0},
{q:"Qual √© o maior planeta do Sistema Solar?",img:"https://images.unsplash.com/photo-1614732414444-096e5f1122d5",opts:["Terra","Marte","J√∫piter","Saturno"],ans:2},
{q:"Quem criou a Teoria da Relatividade?",img:"https://images.unsplash.com/photo-1532094349884-543bc11b234d",opts:["Newton","Einstein","Tesla","Galileu"],ans:1},
{q:"A Grande Muralha fica em qual pa√≠s?",img:"https://images.unsplash.com/photo-1508804185872-d7badad00f7d",opts:["China","√çndia","Coreia","Jap√£o"],ans:0},
{q:"Qual √© o s√≠mbolo do ouro na tabela peri√≥dica?",img:"https://images.unsplash.com/photo-1610375461246-83df859d849d",opts:["Ag","Au","Fe","Cu"],ans:1},
{q:"Qual √© o maior mam√≠fero do mundo?",img:"https://images.unsplash.com/photo-1546182990-dffeafbe841d",opts:["Elefante","Baleia azul","Girafa","Orca"],ans:1}
];

/* =============================
   VARI√ÅVEIS DE CONTROLE
============================= */

let idx=0,time=50,timer,startTime;

/* =============================
   INICIAR JOGO
============================= */

function startGame(){
document.getElementById("start-screen").classList.add("hidden");
document.getElementById("quiz-screen").classList.remove("hidden");

document.getElementById("bgMusic").volume=0.4;
document.getElementById("bgMusic").play();

startTime=Date.now();
render();
}

/* =============================
   MOSTRAR PERGUNTA
============================= */

function render(){
clearInterval(timer);
time=50;
document.getElementById("timer").innerText=time;

let q=quizData[idx];
document.getElementById("progress").innerText=`${idx+1}/7`;
document.getElementById("q-text").innerText=q.q;
document.getElementById("q-img").src=q.img+"?auto=format&fit=crop&w=900&q=60";

let box=document.getElementById("options-box");
box.innerHTML="";

q.opts.forEach((opt,i)=>{
let btn=document.createElement("button");
btn.className="btn-opt";
btn.innerText=opt;
btn.onclick=()=>choose(i,btn);
box.appendChild(btn);
});

timer=setInterval(()=>{
time--;
document.getElementById("timer").innerText=time;
if(time<=0) end(false,"O tempo acabou!");
},1000);
}

/* =============================
   VERIFICAR RESPOSTA
============================= */

function choose(i,btn){
clearInterval(timer);
let correct=quizData[idx].ans;
let buttons=document.querySelectorAll(".btn-opt");
buttons.forEach(b=>b.disabled=true);

if(i===correct){
correctSound.play();
btn.classList.add("correct");
setTimeout(()=>{
idx++;
idx<quizData.length?render():end(true,"VOC√ä GANHOU!");
},700);
}else{
wrongSound.play();
btn.classList.add("wrong");
buttons[correct].classList.add("correct");
setTimeout(()=>end(false,"Voc√™ errou!"),900);
}
}

/* =============================
   FINALIZAR JOGO
============================= */

function end(win,msg){

bgMusic.pause();

document.getElementById("quiz-screen").classList.add("hidden");
document.getElementById("result-screen").classList.remove("hidden");

document.getElementById("res-title").innerText=win?"üèÜ VIT√ìRIA":"GAME OVER";
document.getElementById("res-msg").innerText=msg;

if(win){
winSound.play();
applause.play();
confetti({particleCount:200,spread:120});
moneyRain();
document.getElementById("name-box").classList.remove("hidden");
}else{
showRanking();
}
}

/* =============================
   DINHEIRO CAINDO
============================= */

function moneyRain(){
for(let i=0;i<40;i++){
let m=document.createElement("div");
m.className="money";
m.innerHTML="üí∞";
m.style.left=Math.random()*100+"vw";
m.style.animationDuration=(Math.random()*2+2)+"s";
document.body.appendChild(m);
setTimeout(()=>m.remove(),4000);
}
}

/* =============================
   SALVAR RANKING
============================= */

function saveScore(){
let name=document.getElementById("playerName").value.trim();
if(!name) return alert("Digite seu nome!");

let total=((Date.now()-startTime)/1000).toFixed(1);

let ranking=JSON.parse(localStorage.getItem("rankingMilhao"))||[];
ranking.push({name,time:parseFloat(total)});
ranking.sort((a,b)=>a.time-b.time);
ranking=ranking.slice(0,5);

localStorage.setItem("rankingMilhao",JSON.stringify(ranking));

document.getElementById("name-box").classList.add("hidden");
showRanking();
}

/* =============================
   MOSTRAR RANKING
============================= */

function showRanking(){
let ranking=JSON.parse(localStorage.getItem("rankingMilhao"))||[];
let box=document.getElementById("ranking");
box.innerHTML="<h3>üèÜ Ranking</h3>";

ranking.forEach((p,i)=>{
box.innerHTML+=`
<div class="rank-item ${i===0?'first':''}">
<span>${i+1}. ${p.name}</span>
<span>${p.time}s</span>
</div>`;
});
}

